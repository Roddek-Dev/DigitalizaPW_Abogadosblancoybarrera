---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../data/config";
---

<Layout
  title="Contacto"
  description="Comuníquese con Blanco & Barrera Abogados. Estamos aquí para ayudarle con sus asuntos legales e inmobiliarios."
>
  <!-- Hero Section -->
  <section
    class="h-[40vh] md:h-[50vh] relative bg-[url('/images/bg-biblioteca-oscura.webp')] bg-cover bg-center flex items-center justify-start"
  >
    <div class="absolute inset-0 bg-black/60"></div>
    <div
      class="absolute bottom-0 left-0 right-0 h-4 bg-gradient-to-r from-brand-gold to-yellow-600 opacity-80 z-20"
    >
    </div>
    <div class="container-custom relative z-10 w-full text-left">
      <!-- Title box mimicking the provided screenshot -->
      <div
        class="bg-primary-950/80 inline-block px-12 py-6 rounded-r-3xl border-l-4 border-brand-gold backdrop-blur-sm shadow-2xl"
      >
        <h1
          class="text-4xl md:text-5xl font-bold font-serif text-brand-gold"
          style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);"
        >
          Contacto
        </h1>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section
    class="py-24 bg-zinc-50 relative border-b-8 border-brand-gold overflow-hidden"
  >
    <!-- Decorative background elements -->
    <div
      class="absolute top-0 right-0 w-1/3 h-1/3 bg-brand-gold/5 blur-3xl rounded-full translate-x-1/2 -translate-y-1/2 pointer-events-none"
    >
    </div>

    <div class="container-custom relative z-10">
      <div class="text-center mb-16">
        <span
          class="text-brand-gold font-bold tracking-widest uppercase text-sm mb-4 block"
          >Estamos para servirle</span
        >
        <h2
          class="text-4xl md:text-5xl font-serif font-black text-primary-950 mb-6 uppercase"
        >
          Nuestras Oficinas
        </h2>
        <div class="w-24 h-1 bg-brand-gold mx-auto shadow-md"></div>
      </div>

      <div class="grid lg:grid-cols-12 gap-8 md:gap-12">
        <!-- Left Column: Unified Card (Contact Info + Map) -->
        <div
          class="lg:col-span-8 flex flex-col rounded-2xl shadow-xl overflow-hidden border border-gray-200 bg-white shadow-brand-gold/5"
        >
          <!-- Top Part: Contact Details -->
          <div
            class="bg-primary-950 text-white p-8 md:p-12 relative overflow-hidden"
          >
            <!-- Background pattern -->
            <div
              class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-5"
            >
            </div>

            <div class="relative z-10 grid md:grid-cols-2 gap-8">
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 rounded-full border border-brand-gold/30 flex items-center justify-center bg-brand-gold/10 shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-brand-gold"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h4
                    class="text-sm uppercase tracking-widest text-gray-400 font-bold mb-1"
                  >
                    Línea Directa
                  </h4>
                  <a
                    href={`tel:${siteConfig.contact.phones[0].replace(/\s+/g, "")}`}
                    class="text-xl md:text-2xl font-bold text-white hover:text-brand-gold transition-colors block"
                  >
                    (+57) {siteConfig.contact.phones[0]}
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 rounded-full border border-brand-gold/30 flex items-center justify-center bg-brand-gold/10 shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-brand-gold"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h4
                    class="text-sm uppercase tracking-widest text-gray-400 font-bold mb-1"
                  >
                    Correo Electrónico
                  </h4>
                  <a
                    href={`mailto:${siteConfig.contact.email}`}
                    class="text-base font-medium text-white hover:text-brand-gold transition-colors break-all"
                  >
                    {siteConfig.contact.email}
                  </a>
                </div>
              </div>

              <div
                class="flex items-start gap-4 md:col-span-2 mt-4 pt-8 border-t border-white/10"
              >
                <div
                  class="w-12 h-12 rounded-full border border-brand-gold/30 flex items-center justify-center bg-brand-gold/10 shrink-0"
                >
                  <svg
                    class="w-6 h-6 text-brand-gold"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.243-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4
                    class="text-sm uppercase tracking-widest text-gray-400 font-bold mb-1"
                  >
                    Dirección Principal
                  </h4>
                  <p class="text-lg font-medium text-white">
                    {siteConfig.contact.address}, {siteConfig.contact.city}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Google Maps (iframe) -->
          <div class="w-full h-[400px] bg-gray-100">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3959.577953264426!2d-73.1250284!3d7.1166465!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e68157777777777%3A0x123456789abcdef!2sCl.%2034%20%2313-21%2C%20Centro%2C%20Bucaramanga%2C%20Santander!5e0!3m2!1ses!2sco!4v1715469500000!5m2!1ses!2sco"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
          </div>
        </div>

        <!-- Right Column: Premium Schedule Cards -->
        <div class="lg:col-span-4 flex flex-col gap-6 h-full font-sans">
          <!-- Box 1 -->
          <div
            class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 flex-1 flex flex-col items-center justify-center text-center group hover:-translate-y-1 transition-all duration-300 relative overflow-hidden"
          >
            <!-- Top accent border -->
            <div class="absolute top-0 left-0 right-0 h-2 bg-brand-gold"></div>

            <div
              class="w-16 h-16 rounded-full bg-zinc-50 border border-gray-200 flex items-center justify-center mb-6 group-hover:bg-brand-gold/10 group-hover:border-brand-gold/30 transition-colors"
            >
              <!-- Icon -->
              <svg
                class="w-8 h-8 text-primary-950"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>

            <span
              class="text-xs font-bold uppercase tracking-widest text-brand-gold mb-2"
              >Lunes a Viernes</span
            >
            <h3 class="text-2xl font-black text-primary-950 mb-3 font-serif">
              8:00 AM - 5:00 PM
            </h3>
            <p class="text-gray-500 font-medium text-sm leading-relaxed">
              Asesoría legal continua durante jornadas hábiles para todos sus
              requerimientos.
            </p>
          </div>

          <!-- Box 2 -->
          <div
            class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 flex-1 flex flex-col items-center justify-center text-center group hover:-translate-y-1 transition-all duration-300 relative overflow-hidden"
          >
            <div class="absolute top-0 left-0 right-0 h-2 bg-primary-900"></div>

            <div
              class="w-16 h-16 rounded-full bg-zinc-50 border border-gray-200 flex items-center justify-center mb-6 group-hover:bg-primary-900/10 group-hover:border-primary-900/30 transition-colors"
            >
              <svg
                class="w-8 h-8 text-primary-950"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
            </div>

            <span
              class="text-xs font-bold uppercase tracking-widest text-primary-900 mb-2"
              >Sábados</span
            >
            <h3 class="text-2xl font-black text-primary-950 mb-3 font-serif">
              8:00 AM - 1:00 PM
            </h3>
            <p class="text-gray-500 font-medium text-sm leading-relaxed">
              Disponibilidad de media jornada para trámites urgentes y consultas
              presenciales.
            </p>
          </div>

          <!-- Box 3 -->
          <div
            class="bg-primary-950 rounded-2xl shadow-xl border border-primary-900 p-8 flex-1 flex flex-col items-center justify-center text-center hover:-translate-y-1 hover:shadow-[0_0_30px_rgba(234,179,8,0.2)] transition-all duration-300 relative overflow-hidden"
          >
            <!-- Subtle glow effect -->
            <div
              class="absolute -bottom-8 -right-8 w-32 h-32 bg-brand-gold/20 blur-2xl rounded-full"
            >
            </div>

            <div
              class="w-16 h-16 rounded-full bg-white/5 border border-brand-gold/30 flex items-center justify-center mb-6 relative z-10"
            >
              <svg
                class="w-8 h-8 text-brand-gold animate-pulse"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>

            <span
              class="text-xs font-bold uppercase tracking-widest text-brand-gold mb-2 relative z-10"
              >Domingos y Festivos</span
            >
            <h3
              class="text-2xl font-black text-white mb-5 font-serif relative z-10"
            >
              Emergencias
            </h3>

            <a
              href={siteConfig.contact.whatsappLink}
              target="_blank"
              class="relative z-10 inline-flex items-center justify-center gap-2 bg-brand-gold hover:bg-yellow-500 text-primary-950 font-bold py-3 px-6 rounded-full text-sm transition-transform hover:scale-105 shadow-xl w-full"
            >
              <svg
                class="w-5 h-5 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 24 24"
                ><path
                  d="M12.031 6.172c-3.181 0-5.767 2.586-5.768 5.766-.001 1.298.38 2.27 1.019 3.287l-.582 2.128 2.182-.573c.978.58 1.911.928 3.145.929 3.178 0 5.767-2.587 5.768-5.766.001-3.187-2.575-5.77-5.764-5.771zm3.392 8.244c-.144.405-.837.774-1.17.824-.299.045-.677.063-1.092-.069-.252-.08-.575-.187-.988-.365-1.739-.751-2.874-2.502-2.961-2.617-.087-.116-.708-.94-.708-1.793 0-.853.448-1.273.607-1.446.159-.173.346-.217.462-.217l.332.006c.106.005.249-.04.39.298.144.347.491 1.2.534 1.287.043.087.072.188.014.304-.058.116-.087.188-.173.289l-.26.304c-.087.086-.177.18-.076.354.101.174.449.741.964 1.201.666.598 1.236.771 1.41.858.173.086.275.072.376-.043.101-.115.433-.506.549-.68.116-.173.231-.145.39-.087s1.012.477 1.185.564c.174.087.289.13.332.202.043.073.043.423-.101.827z"
                ></path></svg
              >
              <span class="truncate">WhatsApp Directo</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
