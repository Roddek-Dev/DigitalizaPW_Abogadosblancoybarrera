---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../data/config";
---

<Layout
  title="Contacto"
  description="Comun√≠quese con Blanco & Barrera Abogados. Estamos aqu√≠ para ayudarle con sus asuntos legales e inmobiliarios."
>
  <!-- Hero Section -->
  <section
    class="h-[40vh] md:h-[50vh] relative bg-[url('/images/bg-biblioteca-oscura.webp')] bg-cover bg-center flex items-center justify-start"
  >
    <div class="absolute inset-0 bg-black/60"></div>
    <div
      class="absolute bottom-0 left-0 right-0 h-4 bg-gradient-to-r from-brand-gold to-yellow-600 opacity-80 z-20"
    >
    </div>
    <div class="container-custom relative z-10 w-full text-left">
      <!-- Title box mimicking the provided screenshot -->
      <div
        class="bg-primary-950/80 inline-block px-12 py-6 rounded-r-3xl border-l-4 border-brand-gold backdrop-blur-sm shadow-2xl"
      >
        <h1
          class="text-4xl md:text-5xl font-bold font-serif text-brand-gold"
          style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);"
        >
          Contacto
        </h1>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <!-- Using a light bg matching the screenshot vibe -->
  <section class="py-20 bg-[#b3b6b7] relative border-b-8 border-brand-gold">
    <div class="container-custom">
      <div class="mb-10 text-center md:text-left pl-2">
        <h2
          class="text-4xl md:text-4xl font-serif font-bold text-gray-800 tracking-wide mb-8"
        >
          Es f√°cil <span
            class="text-brand-gold font-light"
            style="text-shadow: 1px 1px 1px rgba(0,0,0,0.2);">encontrarnos</span
          >
        </h2>
      </div>

      <div class="grid lg:grid-cols-12 gap-8 md:gap-12 pl-2">
        <!-- Left Column: Contact Info & Map -->
        <div class="lg:col-span-8 flex flex-col gap-8">
          <!-- Black Contact Box -->
          <div
            class="bg-black text-white p-10 md:p-14 shadow-2xl flex flex-col items-center text-center space-y-6"
          >
            <div class="text-brand-gold mb-2">
              <!-- Phone Icon -->
              <svg
                class="w-12 h-12 md:w-16 md:h-16 mx-auto"
                fill="currentColor"
                viewBox="0 0 20 20"
                ><path
                  d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                ></path></svg
              >
            </div>

            <div class="space-y-4">
              <a
                href={`tel:${siteConfig.contact.phones[0].replace(/\s+/g, "")}`}
                class="text-lg md:text-xl font-bold hover:text-brand-gold transition-colors inline-block underline underline-offset-4 decoration-white/50 tracking-widest"
              >
                57+{siteConfig.contact.phones[0].replace(/\s+/g, "")}
              </a>
              <p class="text-gray-400 text-sm md:text-base font-medium">
                Disponible entre semana desde 8 AM - 5 PM
              </p>
            </div>

            <div class="space-y-6 w-full flex flex-col items-center pt-6">
              <p
                class="text-sm md:text-base font-medium tracking-wide text-white uppercase text-center max-w-sm leading-relaxed"
              >
                {siteConfig.contact.address.toUpperCase()}
                {siteConfig.contact.city.toUpperCase()}
              </p>
              <p class="text-sm md:text-base font-medium text-gray-300">
                <span class="font-bold text-white tracking-widest">Email</span>
                <a
                  href={`mailto:${siteConfig.contact.email}`}
                  class="hover:text-brand-gold transition-colors ml-2"
                  >{siteConfig.contact.email}</a
                >
              </p>
            </div>
          </div>

          <!-- Google Maps (iframe) -->
          <div
            class="w-full h-[400px] bg-gray-200 border-4 border-white shadow-xl overflow-hidden"
          >
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3959.577953264426!2d-73.1250284!3d7.1166465!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e68157777777777%3A0x123456789abcdef!2sCl.%2034%20%2313-21%2C%20Centro%2C%20Bucaramanga%2C%20Santander!5e0!3m2!1ses!2sco!4v1715469500000!5m2!1ses!2sco"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            >
            </iframe>
          </div>
        </div>

        <!-- Right Column: Schedule Boxes -->
        <div class="lg:col-span-4 flex flex-col gap-6 h-full font-sans">
          <!-- Box 1: Lunes a Viernes -->
          <div
            class="bg-brand-gold text-primary-950 p-8 shadow-xl relative text-center pt-16 flex-1 flex flex-col justify-center border border-yellow-500"
          >
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 bg-black/70 backdrop-blur-sm text-white text-[10px] md:text-xs font-bold uppercase tracking-widest px-6 py-2 shadow-md"
            >
              LUNES A VIERNES
            </div>
            <!-- Inner wrapper to match design layout vertically -->
            <div class="flex flex-col items-center transform -translate-y-2">
              <div class="flex justify-center mb-6">
                <!-- Clock precise thin icon -->
                <svg
                  class="w-16 h-16 text-white stroke-[1.5px]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-2xl md:text-3xl font-normal mb-4 text-[#1a1a1a]">
                8am - 5pm
              </h3>
              <p
                class="font-medium text-[#1a1a1a] leading-relaxed text-sm max-w-[200px] mx-auto"
              >
                Estamos disponibles durante estos horarios para atender tus
                consultas
              </p>
            </div>
          </div>

          <!-- Box 2: Sabados -->
          <div
            class="bg-brand-gold text-primary-950 p-8 shadow-xl relative text-center pt-16 flex-1 flex flex-col justify-center border border-yellow-500"
          >
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 bg-black/70 backdrop-blur-sm text-white text-[10px] md:text-xs font-bold uppercase tracking-widest px-8 py-2 shadow-md"
            >
              SABADOS
            </div>
            <div class="flex flex-col items-center transform -translate-y-2">
              <div class="flex justify-center mb-6">
                <svg
                  class="w-16 h-16 text-white stroke-[1.5px]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-2xl md:text-3xl font-normal mb-4 text-[#1a1a1a]">
                8am - 1pm
              </h3>
              <p
                class="font-medium text-[#1a1a1a] leading-relaxed text-sm max-w-[200px] mx-auto"
              >
                No dudes en ponerte en contacto con nosotros
              </p>
            </div>
          </div>

          <!-- Box 3: Domingos (Emergencias) -->
          <div
            class="bg-brand-gold text-primary-950 p-8 shadow-xl relative text-center pt-16 flex-1 flex flex-col justify-center border border-yellow-500"
          >
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 bg-black/70 backdrop-blur-sm text-white text-[10px] md:text-xs font-bold uppercase tracking-widest px-8 py-2 shadow-md"
            >
              DOMINGOS
            </div>
            <div class="flex flex-col items-center transform -translate-y-2">
              <div class="flex justify-center mb-6">
                <!-- Phone outline thin icon -->
                <svg
                  class="w-14 h-14 text-white stroke-[1.5px]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-2xl md:text-3xl font-normal mb-4 text-[#1a1a1a] tracking-wide"
              >
                Emergencias
              </h3>
              <a
                href={siteConfig.contact.whatsappLink}
                target="_blank"
                class="block font-medium text-[#1a1a1a] hover:text-white transition-colors underline underline-offset-4 decoration-[#1a1a1a]/40 hover:decoration-white max-w-[200px] mx-auto text-sm leading-relaxed"
              >
                Escr√≠benos al WhatsApp Haz clic aqu√≠‚òùüèº
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
